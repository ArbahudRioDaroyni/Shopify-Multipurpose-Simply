{% doc %}
  Renders a single cart item with image, details, quantity controls, and remove button.

  @param {product[]} products - Array of cart products to display in the cart items
  @param {string} [class] - Additional CSS class for the cart item container

  @example
  {% render 'cart-item', products: products, class: 'custom-class' %}
{% enddoc %}

<div class="cart-items {{ class | default: '' }}">
  {% for product in products %}
    <div class="cart-item" data-variant-id="{{ product.variant.id }}">
      <div class="cart-item__image">
        {% if product.image %}
          {% render 'image',
            image: product.image,
            url: product.product.url,
            width: 120,
            height: 120,
            class: 'cart-item__img'
          %}
        {% else %}
          <div class="cart-item__placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
      <div class="cart-item__content">
        <div class="cart-item__row cart-item__row--top">
          <div>
            <div class="cart-item__title">
              <a href="{{ product.product.url }}">{{ product.product.title }}</a>
            </div>
            <div class="cart-item__row cart-item__row--variant">
              {% if product.variant.title != 'Default Title' %}
                <div class="cart-item__variant">{{ product.variant.title }}</div>
              {% endif %}
            </div>
            {% if product.selling_plan_allocation %}
              <div class="cart-item__subscription">
                {{ product.selling_plan_allocation.selling_plan.name }}
              </div>
            {% endif %}
          </div>
          <div class="cart-item__actions">
            <button type="button" class="cart-item__remove" aria-label="{{ 'cart.remove' | t }}">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3,6 5,6 21,6"></polyline>
                <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
                <line x1="10" y1="11" x2="10" y2="17"></line>
                <line x1="14" y1="11" x2="14" y2="17"></line>
              </svg>
              <span hidden>{{ 'cart.remove' | t }}</span>
            </button>
          </div>
        </div>
        <div class="cart-item__row cart-item__row--bottom">
          <div class="cart-item__quantity">
            {% render 'quantity-selector',
              style_variant: 'compact',
              input_name: 'updates[]',
              initial_value: product.quantity,
              min_value: 0,
              max_value: 999,
              price: product.price,
              show_total: true,
              show_price: true,
              unique_id: product.key
            %}
          </div>
          {% comment %} <div class="cart-item__pricing">
            {% if product.original_price != product.final_price %}
              <div class="cart-item__price-wrapper">
                <span class="cart-item__price cart-item__price--sale">{{ product.final_price | money }}</span>
                <span class="cart-item__price cart-item__price--original">{{ product.original_price | money }}</span>
              </div>
            {% else %}
              <span class="cart-item__price">{{ product.original_price | money }}</span>
            {% endif %}
            {% if product.unit_price_measurement %}
              <div class="cart-item__unit-price">
                {{ product.unit_price | money }}/{{ product.unit_price_measurement.reference_unit }}
              </div>
            {% endif %}
          </div> {% endcomment %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% stylesheet %}
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .cart-item {
    display: flex;
    gap: 12px;
    align-items: center;
    padding: 12px;
    border: 1px solid rgba(15, 15, 15, 0.06);
    border-radius: 8px;
    background: transparent;
  }

  .cart-item__image {
    flex: 0 0 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-item__img,
  .cart-item__placeholder svg {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 6px;
    display: block;
  }

  .cart-item__content {
    flex: 1 1 auto;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .cart-item__row--top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 12px;
    width: 100%;
  }

  .cart-item__title a {
    color: var(--color-text, #111111);
    text-decoration: none;
    font-weight: 600;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .cart-item__variant,
  .cart-item__subscription {
    color: #6b7280;
    font-size: 13px;
    margin-top: 4px;
  }

  .cart-item__actions {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
  }

  .cart-item__remove {
    background: transparent;
    border: none;
    padding: 6px;
    color: #6b7280;
    cursor: pointer;
    border-radius: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .cart-item__remove:hover {
    color: #b91c1c;
    background: rgba(185, 28, 28, 0.06);
  }

  .cart-item__row--bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    width: 100%;
  }

  .cart-item__quantity {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .cart-item__price {
    font-weight: 600;
    color: var(--color-text, #111111);
  }

  /* Compact, clean responsive behavior */
  @media (max-width: 600px) {
    .cart-item {
      flex-direction: row;
      gap: 10px;
      padding: 10px;
    }
    .cart-item__image {
      flex: 0 0 64px;
    }
    .cart-item__img,
    .cart-item__placeholder svg {
      width: 64px;
      height: 64px;
    }
    .cart-item__row--top {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
    .cart-item__row--bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
  }

{% endstylesheet %}

{% javascript %}
  class CartItem {
    constructor(element) {
      this.element = element;
      this.debounceTimeout = null;
      this.init();
    }

    init() {
      this._removeButton();
      this._quantityInputs();
    }

    _removeButton() {
      const button = this.element.querySelector('.cart-item__remove');
      if (!button) return;
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const id = this.element.getAttribute('data-variant-id');
        this._debounceCartChange(id, 0);
      });
    }

    _quantityInputs() {
      const quantityInputs = this.element.querySelectorAll('.quantity-selector input');
      if (!quantityInputs.length) return;
      quantityInputs.forEach(input => {
        input.addEventListener('change', () => {
          const id = this.element.getAttribute('data-variant-id');
          this._debounceCartChange(id, parseInt(input.value, 10));
        });
      });
    }

    _debounceCartChange(id, quantity) {
      clearTimeout(this.debounceTimeout);
      this.debounceTimeout = setTimeout(() => {
        document.dispatchEvent(new CustomEvent('cart-item:updated', {
          detail: {
            id, quantity }
        }));
      }, 250);
    }
  }

  window.theme = window.theme || {};
  window.theme.CartItem = CartItem;

  // Initialize CartItem for each cart item element
  document.addEventListener('DOMContentLoaded', () => {
    const cartItems = document.querySelectorAll('.cart-item');
    cartItems.forEach(cartItem => {
      new window.theme.CartItem(cartItem);
    });
  });
{% endjavascript %}