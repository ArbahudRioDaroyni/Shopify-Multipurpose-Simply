{% doc %}
  Renders a single cart item with image, details, quantity controls, and remove button.

  @param {product[]} products - Array of cart products to display in the cart items
  @param {string} [class] - Additional CSS class for the cart item container

  @example
  {% render 'cart-item', products: products, class: 'custom-class' %}
{% enddoc %}

<div class="cart-items {{ class | default: '' }}">
  {% for product in products %}
    <div class="cart-item" data-variant-id="{{ product.variant.id }}">
      <div class="cart-item__image">
        {% if product.image %}
          {% render 'image',
            image: product.image,
            url: product.product.url,
            width: 120,
            height: 120,
            class: 'cart-item__img'
          %}
        {% else %}
          <div class="cart-item__placeholder">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="cart-item__details">
        <div class="cart-item__info">
          <h3 class="cart-item__title">
            <a href="{{ product.product.url }}">{{ product.product.title }}</a>
          </h3>
          {% if product.variant.title != 'Default Title' %}
            <p class="cart-item__variant">{{ product.variant.title }}</p>
          {% endif %}
          {% if product.selling_plan_allocation %}
            <p class="cart-item__subscription">
              {{ product.selling_plan_allocation.selling_plan.name }}
            </p>
          {% endif %}
          {% if product.properties.size > 0 %}
            <div class="cart-item__properties">
              {% for property in product.properties %}
                {% unless property.last == blank %}
                  <div class="cart-item__property">
                    <span class="property-name">{{ property.first }}:</span>
                    <span class="property-value">{{ property.last }}</span>
                  </div>
                {% endunless %}
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <div class="cart-item__pricing">
          {% if product.original_price != product.final_price %}
            <div class="cart-item__price-wrapper">
              <span class="cart-item__price cart-item__price--sale">{{ product.final_price | money }}</span>
              <span class="cart-item__price cart-item__price--original">{{ product.original_price | money }}</span>
            </div>
          {% else %}
            <span class="cart-item__price">{{ product.original_price | money }}</span>
          {% endif %}
          {% if product.unit_price_measurement %}
            <div class="cart-item__unit-price">
              {{ product.unit_price | money }}/{{ product.unit_price_measurement.reference_unit }}
            </div>
          {% endif %}
        </div>
      </div>

      <div class="cart-item__quantity">
        {% render 'quantity-selector', 
          style_variant: 'compact',
          input_name: 'updates[]',
          initial_value: product.quantity,
          min_value: 0,
          max_value: 999,
          show_total: true,
          price: product.final_price,
          unique_id: product.key
        %}
      </div>

      <div class="cart-item__actions">
        <button type="button" class="cart-item__remove" aria-label="{{ 'cart.remove' | t }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="3,6 5,6 21,6"></polyline>
            <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
            <line x1="10" y1="11" x2="10" y2="17"></line>
            <line x1="14" y1="11" x2="14" y2="17"></line>
          </svg>
          <span hidden>{{ 'cart.remove' | t }}</span>
        </button>
      </div>
    </div>
  {% endfor %}
</div>

{% stylesheet %}
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .cart-item {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    gap: 1.5rem;
    padding: 24px;
    background: #ffffff;
    border: 1px solid #f0f0f0;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .cart-item:hover {
    border-color: #e0e0e0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .cart-item__image {
    position: relative;
    width: 120px;
    height: 120px;
    border-radius: 8px;
    overflow: hidden;
    background: #f8f9fa;
  }

  .cart-item__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    color: #adb5bd;
  }

  .cart-item__details {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
  }

  .cart-item__info {
    flex: 1;
  }

  .cart-item__title a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    line-height: 1.4;
    display: block;
    margin-bottom: 8px;
  }

  .cart-item__title a:hover {
    color: var(--color-primary);
  }

  .cart-item__variant,
  .cart-item__subscription {
    font-size: 0.9rem;
    color: #6c757d;
    margin: 4px 0;
  }

  .cart-item__properties {
    margin-top: 8px;
  }

  .cart-item__property {
    font-size: 0.85rem;
    color: #6c757d;
    margin: 2px 0;
  }

  .property-name {
    font-weight: 500;
  }

  .cart-item__pricing {
    margin-top: auto;
  }

  .cart-item__price-wrapper {
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .cart-item__price {
    font-weight: 600;
    font-size: 1.1rem;
  }

  .cart-item__price--sale {
    color: #dc3545;
  }

  .cart-item__price--original {
    color: #6c757d;
    text-decoration: line-through;
    font-size: 0.9rem;
  }

  .cart-item__unit-price {
    font-size: 0.85rem;
    color: #6c757d;
    margin-top: 4px;
  }

  .cart-item__quantity {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .cart-item__actions {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding-top: 8px;
  }

  .cart-item__remove {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    color: #6c757d;
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .cart-item__remove:hover {
    color: #dc3545;
    background: #f8d7da;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .cart-item {
      grid-template-columns: 80px 1fr;
      grid-template-areas:
        "image details"
        "image quantity"
        "actions actions";
      gap: 16px;
      padding: 16px;
    }

    .cart-item__image {
      grid-area: image;
      width: 80px;
      height: 80px;
    }

    .cart-item__details {
      grid-area: details;
    }

    .cart-item__quantity {
      grid-area: quantity;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .cart-item__actions {
      grid-area: actions;
      justify-content: flex-end;
      padding-top: 0;
      border-top: 1px solid #f0f0f0;
      margin-top: 12px;
      padding-top: 12px;
    }
  }

  @media (max-width: 480px) {
    .quantity-input {
      width: 50px;
    }

    .quantity-btn {
      width: 32px;
      height: 32px;
    }
  }
{% endstylesheet %}

{% javascript %}
  class CartItem {
    constructor(element) {
      this.element = element;
      this.debounceTimeout = null;
      this.init();
    }

    init() {
      this._removeButton();
      this._quantityInputs();
    }

    _removeButton() {
      const button = this.element.querySelector('.cart-item__remove');
      if (!button) return;
      button.addEventListener('click', (e) => {
        e.preventDefault();
        const id = this.element.getAttribute('data-variant-id');
        this._debounceCartChange(id, 0);
      });
    }

    _quantityInputs() {
      const quantityInputs = this.element.querySelectorAll('.quantity-selector input');
      if (!quantityInputs.length) return;
      quantityInputs.forEach(input => {
        input.addEventListener('change', () => {
          const id = this.element.getAttribute('data-variant-id');
          this._debounceCartChange(id, parseInt(input.value, 10));
        });
      });
    }

    _debounceCartChange(id, quantity) {
      clearTimeout(this.debounceTimeout);
      this.debounceTimeout = setTimeout(() => {
        document.dispatchEvent(new CustomEvent('cart-item:updated', {
          detail: { id, quantity }
        }));
      }, 250);
    }
  }

  window.theme = window.theme || {};
  window.theme.CartItem = CartItem;

  // Initialize CartItem for each cart item element
  document.addEventListener('DOMContentLoaded', () => {
    const cartItems = document.querySelectorAll('.cart-item');
    cartItems.forEach(cartItem => {
      new window.theme.CartItem(cartItem);
    });
  });
{% endjavascript %}