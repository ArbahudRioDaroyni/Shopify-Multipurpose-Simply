  }

  .countdown-message {
    display: flex;
    align-items: center;
    gap: .5rem;
    margin-bottom: 1rem;
    color: var(--color-text);
    font-size: 1rem;
    font-weight: 500;
    justify-content: center;

  }

  .countdown-icon {
