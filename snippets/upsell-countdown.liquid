{% doc %}
  Renders an upsell countdown timer with customizable messages.

  @param {string} end_date - ISO 8601 formatted end date (e.g., "2024-12-31T23:59:59Z")
  @param {string} [message_before] - Message to display before countdown
  @param {string} [message_after] - Message to display after countdown ends
  @param {string} [class] - Additional CSS classes

  @example
  {% render 'upsell-countdown', 
    end_date: "2024-12-31T23:59:59Z",
    message_before: "Hurry! Sale ends in",
    message_after: "The sale has ended."
  %}
{% enddoc %}

<upsell-countdown 
  class="upsell-countdown {{ class }}"
  end-date="{{ end_date }}"
  message-before="{{ message_before | default: 'Hurry up! Sale Ends in' }}"
  message-after="{{ message_after | default: 'The sale has ended.' }}"
>
  <div class="countdown-container">
    <div class="countdown-message">
      <svg class="countdown-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12,6 12,12 16,14"></polyline>
      </svg>
      <span class="message-text">{{ message_before | default: 'Hurry up! Sale Ends in' }}</span>
    </div>
    
    <div class="countdown-timer">
      <div class="countdown-item">
        <div class="countdown-number" data-days>99</div>
        <span class="countdown-label">Days</span>
      </div>
      
      <div class="countdown-item">
        <div class="countdown-number" data-hours>14</div>
        <span class="countdown-label">hours</span>
      </div>
      
      <div class="countdown-item">
        <div class="countdown-number" data-minutes>43</div>
        <span class="countdown-label">minutes</span>
      </div>
      
      <div class="countdown-item">
        <div class="countdown-number" data-seconds>2</div>
        <span class="countdown-label">seconds</span>
      </div>
    </div>
    
    <div class="countdown-progress">
      <div class="progress-bar">
        <div class="progress-fill" data-progress></div>
      </div>
      <div class="stock-status">
        <span class="stock-indicator"></span>
        <span class="stock-text">In stock</span>
      </div>
    </div>
  </div>
</upsell-countdown>

{% stylesheet %}
  .upsell-countdown {
    display: block;
  }

  .countdown-container {
    /* background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); */
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 1.25rem;
