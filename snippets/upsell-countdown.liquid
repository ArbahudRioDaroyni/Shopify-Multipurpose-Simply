    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .countdown-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    text-align: center;
  }

  .countdown-number {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.75rem;
    font-weight: 700;
    color: #212529;
    line-height: 1;
    margin-bottom: 0.25rem;
    height: 2.5rem;
    width: 3.5rem;
    background: #fff;
    border: 1px solid #dee2e6;
    border-radius: 4px;
    transition: opacity 0.3s ease;
  }

  .countdown-number.updating {
    opacity: 0.4;
  }

  .countdown-label {
    font-size: 0.75rem;
    color: #6c757d;
    font-weight: 400;
    text-transform: lowercase;
  }

  .countdown-progress {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .progress-bar {
    flex: 1;
    height: 8px;
    background-color: #e9ecef;
    border-radius: 4px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #28a745 0%, #20c997 50%, #17a2b8 100%);
    background-size: 300% 100%;
    border-radius: 4px;
    transition: width 0.3s ease;
    width: 85%;
    animation: slideBackground 12s linear infinite;
  }

  @keyframes slideBackground {
    0% {
      background-position: -300% 0;
    }
    100% {
      background-position: 300% 0;
    }
  }

  .stock-status {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    white-space: nowrap;
  }

  .stock-indicator {
    width: 8px;
    height: 8px;
    background-color: #28a745;
    border-radius: 50%;
    animation: blink 2s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0.3; }
  }

  .stock-text {
    font-size: 0.75rem;
    color: #28a745;
    font-weight: 500;
  }

  .countdown-expired .countdown-timer {
    opacity: 0.5;
  }

  .countdown-expired .message-text {
    color: #dc3545;
  }

  .countdown-expired .progress-fill {
    width: 0%;
    background: #dc3545;
  }

  .countdown-expired .stock-indicator {
    background-color: #dc3545;
  }

  .countdown-expired .stock-text {
    color: #dc3545;
  }

  @media (max-width: 576px) {
    .countdown-container {
      padding: 1rem;
    }

    .countdown-timer {
      gap: 0.5rem;
    }

    .countdown-number {
      font-size: 1.5rem;
      width: 3rem;
      height: 2.25rem;
    }

    .countdown-label {
      font-size: 0.6875rem;
    }

    .countdown-progress {
      flex-direction: column;
      gap: 0.75rem;
      align-items: stretch;
    }

    .stock-status {
      justify-content: center;
    }
  }
{% endstylesheet %}

{% javascript %}
  class UpsellCountdown extends HTMLElement {
    constructor() {
      super();
      this.endDate = null;
      this.timer = null;
      this.currentValues = {};
    }

    connectedCallback() {
      this.endDate = new Date(this.getAttribute('end-date'));
      
      this.elements = {
        messageText: this.querySelector('.message-text'),
        days: this.querySelector('[data-days]'),
        hours: this.querySelector('[data-hours]'),
        minutes: this.querySelector('[data-minutes]'),
        seconds: this.querySelector('[data-seconds]'),
        progress: this.querySelector('[data-progress]'),
        stockText: this.querySelector('.stock-text')
      };
      
      if (this.endDate && !isNaN(this.endDate)) {
        this.startCountdown();
      } else {
        this.showExpired();
      }
    }

    disconnectedCallback() {
      if (this.timer) clearInterval(this.timer);
    }

    startCountdown() {
      this.updateCountdown();
      this.timer = setInterval(() => this.updateCountdown(), 1000);
    }

    updateCountdown() {
      const distance = this.endDate.getTime() - Date.now();

      if (distance < 0) {
        this.showExpired();
        return;
      }

      const values = {
        days: Math.floor(distance / 86400000).toString().padStart(2, '0'),
        hours: Math.floor((distance % 86400000) / 3600000).toString().padStart(2, '0'),
        minutes: Math.floor((distance % 3600000) / 60000).toString().padStart(2, '0'),
        seconds: Math.floor((distance % 60000) / 1000).toString().padStart(2, '0')
      };

      Object.entries(values).forEach(([key, value]) => {
        if (this.currentValues[key] !== value) {
          this.updateNumber(key, value);
          this.currentValues[key] = value;
        }
      });

      // Update progress bar
      const totalTime = 604800000;
      const percentage = Math.max(0, Math.min(100, ((totalTime - distance) / totalTime) * 100));
      // this.elements.progress.style.width = `${100 - percentage}%`;
      this.elements.progress.style.width = `100%`;
    }

    updateNumber(type, value) {
      const element = this.elements[type];
      
      element.classList.add('updating');
      
      setTimeout(() => {
        element.textContent = value;
        element.classList.remove('updating');
      }, 150);
    }

    showExpired() {
      if (this.timer) {
        clearInterval(this.timer);
        this.timer = null;
      }

      this.classList.add('countdown-expired');
      this.elements.messageText.textContent = this.getAttribute('message-after') || 'The sale has ended.';
      this.elements.stockText.textContent = 'Sale ended';

      ['days', 'hours', 'minutes', 'seconds'].forEach(type => {
        this.elements[type].textContent = '00';
      });
    }

    static get observedAttributes() {
      return ['end-date'];
    }

    attributeChangedCallback(name, oldValue, newValue) {
      if (name === 'end-date' && oldValue !== newValue && this.elements) {
        this.endDate = new Date(newValue);
        if (!isNaN(this.endDate)) {
          if (this.timer) clearInterval(this.timer);
          this.classList.remove('countdown-expired');
          this.startCountdown();
        }
      }
    }
  }

  customElements.define('upsell-countdown', UpsellCountdown);
{% endjavascript %}