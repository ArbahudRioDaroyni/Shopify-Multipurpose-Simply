<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body class="color-{{ settings.color_scheme }}">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    {% # Load critical JavaScript inline %}
    {% render 'critical-js' %}

    <script>
      window.addEventListener('pageshow', (event) => {
        if (event.persisted) {
          // Page restored from bfcache
          
          // Re-initialize components if necessary
          document.dispatchEvent(new Event('DOMContentLoaded'));
        }
      });

      window.addEventListener('pagehide', (event) => {
        // Page will be cached
        if (event.persisted) {
          // Clean up intensive operations
          document.dispatchEvent(new Event('cleanup'));
        }
      });
    </script>
  </body>
</html>