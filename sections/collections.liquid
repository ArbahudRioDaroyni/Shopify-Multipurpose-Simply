{% comment %}
  This section is used in the list-collections template to render a list of
  collections with modern grid layout and customizable settings.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="collections-page container" data-section-id="{{ section.id }}">
  <!-- Collections Header -->
  <div class="collections-header">
    <div class="collections-header__content">
      <h1 class="collections-title">{{ section.settings.title | default: 'collections.general.title' | t }}</h1>
      {% if section.settings.description != blank %}
        <div class="collections-description">
          {{ section.settings.description }}
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Collections Grid -->
  <div class="collections-main">
    {% if collections.size > 0 %}
      <div 
        class="collections-grid {{ section.settings.grid_layout }}"
        style="
          --columns-desktop: {{ section.settings.columns_desktop }};
          --columns-tablet: {{ section.settings.columns_tablet }};
          --columns-mobile: {{ section.settings.columns_mobile }};
          --grid-gap: {{ section.settings.grid_gap }}px;
        "
      >
        {% for collection in collections %}
          {% unless collection.handle == 'frontpage' %}
            <div class="collection-card {{ section.settings.card_style }}" data-collection-id="{{ collection.id }}">
              <a href="{{ collection.url }}" class="collection-card__link">
                <!-- Collection Image -->
                <div class="collection-card__image-wrapper">
                  {% if collection.featured_image %}
                    {% render 'image',
                      image: collection.featured_image,
                      width: 600,
                      height: 600,
                      crop: 'center',
                      class: 'collection-card__image'
                    %}
                  {% else %}
                    <div class="collection-card__image collection-card__image--placeholder">
                      {{ 'collection-' | append: forloop.index | placeholder_svg_tag }}
                    </div>
                  {% endif %}

                  <!-- Overlay Content -->
                  {% if section.settings.show_overlay %}
                    <div class="collection-card__overlay">
                      <div class="collection-card__overlay-content">
                        <h3 class="collection-card__title">{{ collection.title }}</h3>
                        {% if section.settings.show_product_count %}
                          <p class="collection-card__count">
                            {{ 'collections.general.showing_count' | t: count: collection.products_count, total: collection.products_count }}
                          </p>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>

                <!-- Card Content (below image) -->
                {% unless section.settings.show_overlay %}
                  <div class="collection-card__content">
                    <h3 class="collection-card__title">{{ collection.title }}</h3>
                    
                    {% if section.settings.show_description and collection.description != blank %}
                      <p class="collection-card__description">
                        {{ collection.description | strip_html | truncatewords: section.settings.description_words }}
                      </p>
                    {% endif %}

                    {% if section.settings.show_product_count %}
                      <p class="collection-card__count">
                        {% assign count = collection.products_count %}
                        {% if count == 1 %}
                          {{ count }} {{ 'products.general.product' | t }}
                        {% else %}
                          {{ count }} {{ 'products.general.products' | t }}
                        {% endif %}
                      </p>
                    {% endif %}
                  </div>
                {% endunless %}
              </a>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    {% else %}
      <div class="collections-empty">
        <div class="collections-empty__content">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M3 7V5a2 2 0 0 1 2-2h2"></path>
            <path d="M17 3h2a2 2 0 0 1 2 2v2"></path>
            <path d="M21 17v2a2 2 0 0 1-2 2h-2"></path>
            <path d="M7 21H5a2 2 0 0 1-2-2v-2"></path>
            <rect x="7" y="7" width="10" height="10"></rect>
          </svg>
          <h2>{{ 'collections.general.no_products' | t }}</h2>
          <p>{{ 'collections.general.no_matches_description' | t }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
            {{ 'cart.general.continue_shopping' | t }}
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .collections-page {
    padding: 2rem 0;
  }

  .collections-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .collections-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: hsl(var(--color-foreground));
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .collections-description {
    color: hsl(var(--color-foreground-secondary));
    font-size: 1.125rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .collections-grid {
    display: grid;
    gap: var(--grid-gap);
    grid-template-columns: repeat(var(--columns-mobile), 1fr);
  }

  .collections-grid--fixed {
    grid-template-columns: repeat(var(--columns-mobile), 1fr);
  }

  .collections-grid--auto {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  }

  .collection-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: hsl(var(--color-foreground-contrast));
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid hsl(var(--color-border));
  }

  .collection-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  .collection-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .collection-card__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: hsl(var(--color-background-secondary));
  }

  .collection-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .collection-card__image--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background: hsl(var(--color-background-secondary));
    color: hsl(var(--color-foreground-secondary));
  }

  .collection-card__image--placeholder svg {
    width: 48px;
    height: 48px;
    opacity: 0.5;
  }

  .collection-card:hover .collection-card__image {
    transform: scale(1.05);
  }

  .collection-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.4) 60%, rgba(0, 0, 0, 0.8) 100%);
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .collection-card:hover .collection-card__overlay {
    opacity: 1;
  }

  .collection-card__overlay-content {
    text-align: left;
  }

  .collection-card--overlay .collection-card__overlay {
    opacity: 1;
  }

  .collection-card__content {
    padding: 1.5rem;
  }

  .collection-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: hsl(var(--color-foreground));
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .collection-card__overlay .collection-card__title {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .collection-card__description {
    color: hsl(var(--color-foreground-secondary));
    line-height: 1.5;
    margin: 0 0 1rem 0;
    font-size: 0.875rem;
  }

  .collection-card__count {
    color: hsl(var(--color-foreground-tertiary));
    font-size: 0.875rem;
    font-weight: 500;
    margin: 0;
  }

  .collection-card__overlay .collection-card__count {
    color: rgba(255, 255, 255, 0.8);
  }

  .collections-empty {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    text-align: center;
  }

  .collections-empty__content {
    max-width: 400px;
  }

  .collections-empty__content svg {
    color: hsl(var(--color-foreground-secondary));
    margin-bottom: 1.5rem;
  }

  .collections-empty__content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: hsl(var(--color-foreground));
    margin: 0 0 0.5rem 0;
  }

  .collections-empty__content p {
    color: hsl(var(--color-foreground-secondary));
    margin: 0 0 2rem 0;
    line-height: 1.6;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 2rem;
    border-radius: 6px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
    cursor: pointer;
    font-size: 1rem;
    line-height: 1.5;
  }

  .btn--primary {
    background: hsl(var(--color-button-primary));
    color: hsl(var(--color-button-primary-text));
    border-color: hsl(var(--color-button-primary));
  }

  .btn--primary:hover {
    background: hsl(var(--color-button-primary-hover));
    border-color: hsl(var(--color-button-primary-hover));
    transform: translateY(-1px);
  }

  /* Tablet */
  @media (min-width: 768px) {
    .collections-grid {
      grid-template-columns: repeat(var(--columns-tablet), 1fr);
    }

    .collections-grid--auto {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    .collections-title {
      font-size: 3rem;
    }

    .collection-card__content {
      padding: 2rem;
    }
  }

  /* Desktop */
  @media (min-width: 1024px) {
    .collections-grid {
      grid-template-columns: repeat(var(--columns-desktop), 1fr);
    }

    .collections-grid--auto {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }

    .collections-page {
      padding: 4rem 0;
    }

    .collections-header {
      margin-bottom: 4rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collections",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.collections.settings.header_content.content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.collections.settings.title.label",
      "default": "Our collections"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.collections.settings.description.label",
      "default": "<p>Explore our curated collections of premium products</p>"
    },
    {
      "type": "header",
      "content": "t:sections.collections.settings.header_layout.content"
    },
    {
      "type": "select",
      "id": "grid_layout",
      "label": "t:sections.collections.settings.grid_layout.label",
      "options": [
        { "value": "collections-grid--fixed", "label": "t:sections.collections.settings.grid_layout.options.fixed" },
        { "value": "collections-grid--auto", "label": "t:sections.collections.settings.grid_layout.options.auto" }
      ],
      "default": "collections-grid--auto"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "t:sections.collections.settings.columns_desktop.label",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 3,
      "info": "t:sections.collections.settings.columns_desktop.info"
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "label": "t:sections.collections.settings.columns_tablet.label",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 2
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "t:sections.collections.settings.columns_mobile.label",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "t:labels.grid_gap",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "header",
      "content": "t:sections.collections.settings.header_card.content"
    },
    {
      "type": "select",
      "id": "card_style",
      "label": "t:sections.collections.settings.card_style.label",
      "options": [
        { "value": "", "label": "t:sections.collections.settings.card_style.options.default" },
        { "value": "collection-card--overlay", "label": "t:sections.collections.settings.card_style.options.overlay" }
      ],
      "default": ""
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "t:sections.collections.settings.show_overlay.label",
      "default": true,
      "info": "t:sections.collections.settings.show_overlay.info"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "t:sections.collections.settings.show_description.label",
      "default": false
    },
    {
      "type": "range",
      "id": "description_words",
      "label": "t:sections.collections.settings.description_words.label",
      "min": 10,
      "max": 30,
      "step": 5,
      "default": 15
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "t:sections.collections.settings.show_product_count.label",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "t:general.collections",
      "settings": {
        "title": "Our collections",
        "description": "<p>Explore our curated collections of premium products</p>",
        "grid_layout": "collections-grid--auto",
        "columns_desktop": 3,
        "columns_tablet": 2,
        "columns_mobile": "1",
        "grid_gap": 24,
        "show_overlay": true,
        "show_product_count": true
      }
    }
  ]
}
{% endschema %}
