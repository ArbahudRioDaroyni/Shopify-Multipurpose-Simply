<div
  id="header-info-bar-{{ section.id }}"
  class="header-info-bar color-{{ section.settings.color_scheme }}"
>
  <div class="header-info-bar__left">
    {% content_for 'block', type: 'group', id: 'phone-group' %}

    {% content_for 'block', type: 'group', id: 'email-group' %}
  </div>

  <div class="header-info-bar__middle slide-text-container">
    {% content_for 'block', type: 'group', id: 'promotion-group' %}
  </div>

  <div class="header-info-bar__right">
    {% content_for 'block', type: 'group', id: 'map-point-group' %}

    {% if section.settings.show_currency_selector %}
      {% form 'currency', class: 'header-info-bar__item header-info-bar__currency' %}
        <select name="currency_code" class="header-info-bar__select" onchange="this.form.submit()">
          {% for currency_option in shop.enabled_currencies %}
            <option value="{{ currency_option.iso_code }}" {% if currency_option.iso_code == shop.currency %}selected{% endif %}>
              {{ currency_option.iso_code }}
            </option>
          {% endfor %}
        </select>
        <svg class="header-info-bar__chevron" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      {% endform %}
    {% endif %}

    {% if section.settings.show_language_selector %}
      {% form 'localization', class: 'header-info-bar__item header-info-bar__language' %}
        {% render 'icon-or-image', icon: 'global', width: 14 %}
        <select name="locale_code" class="header-info-bar__select" onchange="this.form.submit()">
          {% for language in localization.available_languages %}
            <option value="{{ language.iso_code }}" lang="{{ language.iso_code }}" {% if language.iso_code == localization.language.iso_code %}selected{% endif %}>
              {{ language.endonym_name | capitalize }}
            </option>
          {% endfor %}
        </select>
        <svg class="header-info-bar__chevron" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M1 1L6 6L11 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      {% endform %}
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .header-info-bar {
    background-color: var(--color-background);
    color: var(--color-text);
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    padding: 1rem 2rem;
    font-size: 0.75rem;
  }

  .header-info-bar svg {
    width: 14px;
    height: 14px;
  }

  .header-info-bar__left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    justify-self: start;
  }

  .header-info-bar__middle {
    justify-self: center;
  }

  /* Slide text animation styles */
  .slide-text-container {
    position: relative;
    height: 1.125rem;
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    width: 300px;
  }

  .slide-text-container .shopify-block .shopify-block {
    position: absolute;
    opacity: 0;
    filter: blur(10px);
    transition: all 0.3s ease-in-out;
  }

  .slide-text-container .shopify-block .shopify-block.active {
    position: relative;
    opacity: 1;
    filter: blur(0px);
  }

  .slide-text-container .shopify-block .shopify-block.slide-out {
    opacity: 0;
    filter: blur(15px);
  }

  .slide-text-container .shopify-block .shopify-block.slide-in {
    opacity: 0;
    filter: blur(10px);
  }

  .header-info-bar__right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    justify-self: end;
  }

  .header-info-bar__item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--color-text);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .header-info-bar__item:hover {
    opacity: 0.7;
  }

  .header-info-bar__icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .header-info-bar__promo {
    gap: 0.5rem;
  }

  .header-info-bar__promo-link {
    color: var(--color-text);
    font-weight: 600;
    text-decoration: underline;
  }

  .header-info-bar__currency,
  .header-info-bar__language {
    position: relative;
  }

  .header-info-bar__currency form {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .header-info-bar__select,
  .header-info-bar__currency select {
    appearance: none;
    background: transparent;
    border: none;
    color: var(--color-text);
    font-size: 0.75rem;
    cursor: pointer;
    padding-right: 1.25rem;
    outline: none;
  }

  .header-info-bar__select:hover,
  .header-info-bar__currency select:hover {
    opacity: 0.7;
  }

  .header-info-bar__chevron {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    width: 10px;
    height: 10px;
  }

  .header-info-bar__language {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  @media (max-width: 1024px) {
    .header-info-bar {
      padding: 0.5rem 1rem;
      gap: 1rem;
    }

    .header-info-bar__left,
    .header-info-bar__right {
      gap: 1rem;
    }

    .header-info-bar__right {
      gap: 1rem;
      display: none;
    }
  }

  @media (max-width: 768px) {
    .header-info-bar {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
      padding: 0.75rem 1rem;
      gap: 0.75rem;
      text-align: center;
    }

    .header-info-bar__left,
    .header-info-bar__middle,
    .header-info-bar__right {
      justify-self: center;
    }

    .header-info-bar__left,
    .header-info-bar__right {
      gap: 0.75rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .header-info-bar__promo {
      flex-direction: column;
      text-align: center;
      gap: 0.25rem;
    }
  }

  @media (max-width: 480px) {
    .header-info-bar__item span {
      display: none;
    }

    .header-info-bar__icon {
      width: 18px;
      height: 18px;
    }

    .header-info-bar__promo span {
      display: block;
    }

    .header-info-bar__select,
    .header-info-bar__currency select {
      padding-right: 0;
    }

    .header-info-bar__chevron {
      display: none;
    }
  }
{% endstylesheet %}

{% javascript %}
  class SlideTextAnimation {
    constructor(container) {
      this.container = container;
      this.blocks = container.querySelectorAll('.shopify-block .shopify-block');
      this.currentIndex = 0;
      this.interval = 3000;
      this.timer = null;
      
      if (this.blocks.length > 1) {
        this.init();
      }
    }
    
    init() {
      this.blocks.forEach((block, index) => {
        block.classList.toggle('active', index === 0);
      });
      this.start();
      this.addEventListeners();
    }
    
    slideNext() {
      const current = this.blocks[this.currentIndex];
      
      this.currentIndex++;
      if (this.currentIndex >= this.blocks.length) {
        this.currentIndex = 0;
      }
      
      const next = this.blocks[this.currentIndex];
      
      current.classList.replace('active', 'slide-out');
      
      requestAnimationFrame(() => {
        current.classList.remove('slide-out');
        next.classList.add('slide-in');
        
        requestAnimationFrame(() => {
          next.classList.replace('slide-in', 'active');
        });
      });
    }
    
    start() {
      this.timer = setInterval(() => this.slideNext(), this.interval);
    }
    
    stop() {
      clearInterval(this.timer);
    }
    
    addEventListeners() {
      this.container.addEventListener('mouseenter', () => this.stop());
      this.container.addEventListener('mouseleave', () => this.start());
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const slideContainer = document.querySelector('.slide-text-container');
    if (slideContainer) {
      new SlideTextAnimation(slideContainer);
    }
  });
{% endjavascript %}

